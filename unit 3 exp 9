import numpy as np

class PricingEnvironment:
    def __init__(self):
        self.base_price = 100
        self.competitor_price = 95
        self.demand = 50

    def step(self, action):
        if action == 0:
            self.base_price -= 5
        elif action == 2:
            self.base_price += 5

        self.demand = max(0, 100 - self.base_price + self.competitor_price)
        reward = self.base_price * self.demand
        return reward

env = PricingEnvironment()

for episode in range(10):
    action = np.random.choice([0, 1, 2])
    reward = env.step(action)
    print(f"Episode {episode+1}, Price: {env.base_price}, Reward: {reward}")

